  </tr>

<% @generic_recipes.each do |gr| %>
  <tr>
    <td><%= gr.title %></td>
    <td><%= gr.description %></td>
    <td><%#= gr.instructions %></td>
    <td><%= link_to 'Show', gr %></td>
    <td><%= link_to 'Edit', edit_generic_recipe_path(gr) %></td>
    <td><%= link_to 'Destroy', gr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

